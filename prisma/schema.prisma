generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id             Int              @id(map: "PK_users") @default(autoincrement())
  username       String           @unique @db.VarChar(250)
  email          String           @unique @db.VarChar(250)
  password       String           @db.VarChar(250)
  role           String           @default("user") @db.VarChar(250)
  refresh_tokens refresh_tokens[]
}

model refresh_tokens {
  id         Int       @id(map: "PK_refresh_tokens") @default(autoincrement())
  user_id    Int
  token      String?   @db.VarChar(250)
  issued_at  DateTime? @default(now()) @db.Timestamp(6)
  expires_at DateTime? @db.Timestamp(6)
  users      users     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "FK_refresh_tokens_user_id")
}
